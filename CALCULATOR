#include <stdio.h>
void main() 
{
    int a;
    int b;
    char op;
    printf("Enter the two numbers: ");
    scanf("%d%d", &a, &b);
    printf("Enter the operator: ");
    scanf(" %c", &op);
    switch(op)
    {
        case '+':printf("Add is %d\n",a+b);
        break;
        case '-':printf("Sub is %d\n",a-b);
        break;
        case '*':printf("Mul is %d\n",a*b);
        break;
        case '/':printf("Div is %d\n",a/b);
        break;
        default:printf("Invalid operator!\n");
    }
    
}
